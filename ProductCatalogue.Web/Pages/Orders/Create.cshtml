@page "{productId:int?}"
@model ProductCatalogue.Web.Pages.Orders.CreateModel
@{
    ViewData["Title"] = "Place Order";
}

<h1>Place Your Order</h1>

@if (Model.Product != null)
{
    <h4>Product: @Model.Product.Name (@Model.Product.Price.ToString("C"))</h4>

    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="OrderInput.ProductId" />
                <div class="form-group">
                    <label asp-for="OrderInput.CustomerName" class="control-label"></label>
                    <input asp-for="OrderInput.CustomerName" class="form-control" />
                    <span asp-validation-for="OrderInput.CustomerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrderInput.CustomerEmail" class="control-label"></label>
                    <input asp-for="OrderInput.CustomerEmail" class="form-control" />
                    <span asp-validation-for="OrderInput.CustomerEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrderInput.ShippingAddress" class="control-label"></label>
                    <input asp-for="OrderInput.ShippingAddress" class="form-control" />
                    <span asp-validation-for="OrderInput.ShippingAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrderInput.Quantity" class="control-label"></label>
                    <input asp-for="OrderInput.Quantity" class="form-control" />
                    <span asp-validation-for="OrderInput.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Place Order" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
else
{
    <p>Product not found. Please go back to the <a asp-page="/Products/Index">product list</a>.</p>
}

<div>
    <a asp-page="/Products/Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
